-
    var options = {
        prev_text: '<i class="fa fa-chevron-left"></i>',
        next_text: '<i class="fa fa-chevron-right"></i>',
        mid_size: 1
    }

.paginator
    if is_home()
        if page.prev
            a.prev-page(href=url_for(page.prev_link))
                i.fa.fa-backward
                span Prev
        if page.next
            a.next-page(href=url_for(page.next_link))
                span Next
                i.fa.fa-forward
    else
        if page.prev
            a.prev-post(href=url_for(page.prev.path))
                i.fa.fa-backward
                span!=page.prev.title
        if page.next
            a.next-post(href=url_for(page.next.path))
                span!=page.next.title
                i.fa.fa-forward